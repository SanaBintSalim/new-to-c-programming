//function to find sum of two numbers
#include<stdio.h>

void sum(int x, int y);//semicolon for declaration

int main(){
    int a, b;
    printf("enter two numbers a and b \n\n");
    scanf("%d%d", &a, &b);
    sum(a, b); //argument a, b aka actual parameter  // dont write as " int sum(a, b) "
    return 0;
}

void sum(int x, int y){   //parameter aka formal parameter here , is the value that function takes to work on
        int sum;    //do not declare x and y again here
        sum = x + y;
        printf("sum of %d and %d is %d", x, y, sum);                  
        }

// OR


